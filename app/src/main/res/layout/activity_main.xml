<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Discover"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"/>

    <View
        android:id="@+id/bottom_sheet_background"
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:background="@drawable/bg_bottom_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/button_background_1_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_background_1_2"
        app:layout_constraintBottom_toTopOf="@id/button_background_2_1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="spread"
        android:background="@drawable/bg_image"
        android:backgroundTint="@color/image_background_1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_background_1_1"
        app:layout_constraintStart_toStartOf="@id/button_background_1_1"
        android:layout_margin="10dp"
        android:src="@drawable/checked" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_background_1_1"
        app:layout_constraintStart_toStartOf="@id/button_background_1_1"
        app:layout_constraintEnd_toEndOf="@id/button_background_1_1"
        android:layout_margin="10dp"
        android:text="New Arrival"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

    <View
        android:id="@+id/button_background_1_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_background_1_1"
        app:layout_constraintStart_toEndOf="@id/button_background_1_1"
        app:layout_constraintEnd_toStartOf="@id/button_background_1_3"
        app:layout_constraintBottom_toBottomOf="@id/button_background_1_1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="@drawable/bg_image"
        android:backgroundTint="@color/image_background_2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_background_1_2"
        app:layout_constraintStart_toStartOf="@id/button_background_1_2"
        android:layout_margin="10dp"
        android:src="@drawable/link" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_background_1_2"
        app:layout_constraintStart_toStartOf="@id/button_background_1_2"
        app:layout_constraintEnd_toEndOf="@id/button_background_1_2"
        android:layout_margin="10dp"
        android:text="Link Saved"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

    <View
        android:id="@+id/button_background_1_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_background_1_1"
        app:layout_constraintStart_toEndOf="@id/button_background_1_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_background_1_1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="@drawable/bg_image"
        android:backgroundTint="@color/image_background_3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_background_1_3"
        app:layout_constraintStart_toStartOf="@id/button_background_1_3"
        android:layout_margin="10dp"
        android:src="@drawable/house" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_background_1_3"
        app:layout_constraintStart_toStartOf="@id/button_background_1_3"
        app:layout_constraintEnd_toEndOf="@id/button_background_1_3"
        android:layout_margin="10dp"
        android:text="My Home"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

    <View
        android:id="@+id/button_background_2_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_background_1_1"
        app:layout_constraintStart_toStartOf="@id/button_background_1_1"
        app:layout_constraintEnd_toEndOf="@id/button_background_1_1"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_background"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:background="@drawable/bg_image"
        android:backgroundTint="@color/image_background_4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_background_2_1"
        app:layout_constraintStart_toStartOf="@id/button_background_2_1"
        android:layout_margin="10dp"
        android:src="@drawable/film" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_background_2_1"
        app:layout_constraintStart_toStartOf="@id/button_background_2_1"
        app:layout_constraintEnd_toEndOf="@id/button_background_2_1"
        android:layout_margin="10dp"
        android:text="Eye Stream"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

    <View
        android:id="@+id/button_background_2_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_background_2_1"
        app:layout_constraintStart_toStartOf="@id/button_background_1_2"
        app:layout_constraintEnd_toEndOf="@id/button_background_1_2"
        app:layout_constraintBottom_toBottomOf="@id/button_background_2_1"
        android:background="@drawable/bg_image"
        android:backgroundTint="@color/image_background_5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_background_2_2"
        app:layout_constraintStart_toStartOf="@id/button_background_2_2"
        android:layout_margin="10dp"
        android:src="@drawable/pluspro" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_background_2_2"
        app:layout_constraintStart_toStartOf="@id/button_background_2_2"
        app:layout_constraintEnd_toEndOf="@id/button_background_2_2"
        android:layout_margin="10dp"
        android:text="Pro Account"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

    <View
        android:id="@+id/button_background_2_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_background_2_1"
        app:layout_constraintStart_toStartOf="@id/button_background_1_3"
        app:layout_constraintEnd_toEndOf="@id/button_background_1_3"
        app:layout_constraintBottom_toBottomOf="@id/button_background_2_1"
        android:background="@drawable/bg_image"
        android:backgroundTint="@color/image_background_6"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_background_2_3"
        app:layout_constraintStart_toStartOf="@id/button_background_2_3"
        android:layout_margin="10dp"
        android:src="@drawable/download" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_background_2_3"
        app:layout_constraintStart_toStartOf="@id/button_background_2_3"
        app:layout_constraintEnd_toEndOf="@id/button_background_2_3"
        android:layout_margin="10dp"
        android:text="Recent Files"
        android:textSize="22sp"
        android:textColor="@color/main_text_color" />

</androidx.constraintlayout.widget.ConstraintLayout>